{
    "manifest_version": 2,
    "name": "2ch+",
    "short_name": "2ch+",
    "version": "1.0.0",
    "version_name": "beta-11.02.18",
    "description": "Simplifies the interaction with 2ch.hk.",
    "icons": {
        "16": "/interface/icons/icon-16.png",
        "32": "/interface/icons/icon-32.png",
        "48": "/interface/icons/icon-48.png",
        "128": "/interface/icons/icon-128.png"
    },
    "browser_action": {
        "default_title": "2ch+",
        "default_popup": "/interface/html/popup.html"
    },
    "background": {
        "scripts": [
            "/interaction/js/scripts/background/background-screenshot.js",
            "/interaction/js/scripts/background/background-downloads.js",
            "/interaction/js/scripts/background/background-on-message.js",
            "/interaction/js/scripts/background/background-API.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://2ch.hk/*/res/*"
            ],
            "js": [
                "/interaction/js/scripts/content/content-API.js",
                "/interaction/js/scripts/content/content-page-elements.js",
                "/interaction/js/scripts/content/content-DOMContentLoaded.js",
                "/interaction/js/scripts/content/content-on-message.js"
            ]
        }
    ],
    "permissions": [
        "pageCapture",
        "downloads",
        "activeTab",
        "*://2ch.hk/*"
    ],
    "author": "Sergey Kuznetsov",
    "homepage_url": "https://github.com/Amaimersion/2ch-helper"
}