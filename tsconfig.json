{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ES6",
        "moduleResolution": "node",
        "lib": [
            "es2018",
            "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "@libs/*": ["src/common/js/libs/*"],
            "@modules/*": ["src/common/js/modules/*"]
        },
        "alwaysStrict": true,
        "disableSizeLimit": true,
        "downlevelIteration": true,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictPropertyInitialization": true,
        "removeComments": true, // only for production.
        "sourceMap": true // only for development.
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}
